<view
  class="mc-index-anchor-wrapper"
  style="{{ wrapperStyle }}"
>
  <view
    class="mc-index-anchor {{ active ? 'mc-index-anchor--active mc-hairline--bottom' : '' }}"
    style="{{ anchorStyle }}"
  >
    <slot wx:if="{{ useSlot }}"/>
    <block wx:else>
      <text>{{ index }}</text>
    </block>
  </view>
</view>
