<mc-overlay
  wx:if="{{ mask || forbidClick }}"
  show="{{ show }}"
  z-index="{{ zIndex }}"
  custom-style="{{ mask ? '' : 'background-color: transparent;' }}"
/>
<mc-transition
  show="{{ show }}"
  custom-style="z-index: {{ zIndex }}"
  custom-class="mc-toast__container"
>
  <view
    class="mc-toast mc-toast--{{ type === 'text' ? 'text' : 'icon' }} mc-toast--{{ position }}"
    catch:touchmove="noop"
  >
    <!-- text only -->
    <text wx:if="{{ type === 'text' }}">{{ message }}</text>

    <!-- with icon -->
    <block wx:else>
      <mc-loading
        wx:if="{{ type === 'loading' }}"
        color="white"
        type="{{ loadingType }}"
        custom-class="mc-toast__loading"
      />
      <mc-icon wx:else class="mc-toast__icon" name="{{ type }}" />
      <text wx:if="{{ message }}" class="mc-toast__text">{{ message }}</text>
    </block>

    <slot />
  </view>
</mc-transition>
