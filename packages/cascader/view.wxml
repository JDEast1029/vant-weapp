<view class="vcm-cascader-view">
    <slot label="{{ label }}" current="{{ currentIndex }}" name="header">
        <view class="vcm-cascader-view__wrapper">
            <view
                wx:for="{{ currentValue }}"
                wx:key="item"
                wx:for-item="item"
                wx:for-index="index"
                class="{{ currentIndex === index ? 'is-active' : '' }} vcm-cascader-view__label"
                bindtap="currentIndex = index"
            >
                {{ label[index] }}
            </view>
            <view 
                wx:if="hasChildren" 
                class="{{ currentIndex === currentValue.length ? 'is-active': '' }} vcm-cascader-view__label"
                bindtap="currentIndex = currentValue.length"
            >
                请选择
            </view>
        </view>
    </slot>
    <mc-col
        value="{{ colValue }}"
        data-source="{{ colData }}"
        index="{{ currentIndex }}"
        bind:change="handleChange"
    />
</view>