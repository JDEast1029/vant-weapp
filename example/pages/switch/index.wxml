<demo-block title="基础用法" padding>
  <van-switch
    value="{{ checked }}"
    bind:change="onChange"
  />
</demo-block>

<demo-block title="禁用状态" padding>
  <van-switch
    value="{{ checked }}"
    disabled
    bind:change="onChange"
  />
</demo-block>

<demo-block title="加载状态" padding>
  <van-switch
    value="{{ checked }}"
    loading
    bind:change="onChange"
  />
</demo-block>

<demo-block title="自定义大小" padding>
  <van-switch
    value="{{ checked }}"
    size="24px"
    bind:change="onChange"
  />
</demo-block>

<demo-block title="自定义颜色" padding>
  <van-switch
    value="{{ checked }}"
    active-color="#07c160"
    inactive-color="#ee0a24"
    bind:change="onChange"
  />
</demo-block>

<demo-block title="异步控制" padding>
  <van-switch
    value="{{ checked2 }}"
    size="36px"
    bind:change="onChange2"
  />
</demo-block>

<van-modal id="mc-modal" />
